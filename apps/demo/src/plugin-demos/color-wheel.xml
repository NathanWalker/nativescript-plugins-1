<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page"
      xmlns:clw="@sergeymell/color-wheel">
    <Page.actionBar>
        <ActionBar title="color-wheel" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <clw:ColorWheel width="200" height="200"
                            colorSelect="{{colorSelected}}"/>
            <Label text="{{ color }}"/>
            <Label width="100%" height="30" backgroundColor="{{color}}"/>
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>
